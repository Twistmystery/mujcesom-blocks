{#
/**
 * Block Name: Facts and Stats block
 *
 * This is the template that displays the facts and stats block.
 */
#}
<div class="{{background}}">
   <div class="py-4 w-full flex flex-wrap mx-0 space-y-6 items-center justify-center px-6">
        <h2 class="text-6xl lg:text-7xl font-bold 
        {{fields.background_color == "white" ? "text-green" : "text-white" }} leading-none"> {{ fields.heading }} </h2>
    </div>
    <div class="facts_and_stats_columns grid {{grid_columns}} gap-4 justify-center px-6"><!--This creates the grid/columns-->
        {% for i in fields.info %}
            <p class= "text-center text-5xl lg:text-6xl font-bold 
            {{fields.background_color == "white" ? "text-green" : "text-white" }} leading-none"> {{i.number}} </p><!--If the title is too long and a single word, it may run off screen-->
        {% endfor %} 
        {% for i in fields.info %}
            <p class= "text-center font-sans text-xl font-semibold uppercase 
            {{fields.background_color == "white" ? "text-gray-600" : 
              fields.background_color == "green" ? "text-black" : "text-green" }} mt-3"> {{i.caption}} </p>
        {% endfor %}  
    </div><!--end info section-->

    {% if fields.buttons.primary_button and fields.buttons.primary_button_label %}
    <div class= "py-4 flex flex-col gap-2 lg:gap-6 lg:flex-row items-center justify-center">
        {% apply shortcodes %}
			[viridis_button link="{{ fields.buttons.primary_button  }}" text="{{ fields.buttons.primary_button_label }}" 
            class= {{ fields.background_color == "white" ? "button--primary" : "button--primary-dark" }}]
        {% endapply %}
        {% if fields.buttons.secondary_button and fields.buttons.secondary_button_label %}
            {% apply shortcodes %}
                [viridis_button link ="{{ fields.buttons.secondary_button }}" text="{{ fields.buttons.secondary_button_label}}" 
                class="{{ fields.background_color == "white" ? "button--primary" : "button--primary-dark" }}" ]
            {% endapply %}
        {% endif %}    
    </div>
    {% endif %}

</div><!--end facts and stats-->

